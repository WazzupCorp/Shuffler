<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="standardTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlNormal">@color/black</item>

        <item name="colorAccent">@color/black</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>


    <style name="darkmode" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/darkergrey</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>

    </style>





    <style name="DialogScale">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/scale_out</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation" tools:ignore="DuplicateDefinition">@android:anim/fade_in</item>
        <item name="android:windowEnterAnimation" tools:ignore="DuplicateDefinition">@android:anim/fade_out</item>
    </style>
</resources>